{
    "files.exclude": {
        "src/zlm_env": true,
        "src/**/*.zsc": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "src/build": true,
        "**/*.zsc": true,
        "docs_build": true,
    },
    "python.linting.pylintEnabled": false,
    "python.linting.pycodestyleEnabled": false,
    "python.linting.enabled": true,
    "restructuredtext.confPath": "${workspaceFolder}\\doc_src",
    "python.linting.flake8Enabled": true,

    "python.linting.flake8Args": [
        "--max-line-length=130",
        "--ignore=E722"
    ]
}